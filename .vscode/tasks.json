{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "frontend",
      "type": "shell",
      "osx": {
        "command": "cd frontend && npm run dev"
      },
      "linux": {
        "command": "cd frontend && npm run dev"
      },
      "windows": {
        "command": "npm run dev",
        "options": {
          "cwd": "${workspaceFolder}/frontend"
        }
      },
      "group": "none"
    },
    {
      "label": "backend",
      "type": "shell",
      "osx": {
        "command": "cd backend && source ../env/bin/activate && python3 manage.py runserver"
      },
      "linux": {
        "command": "cd backend && source ../env/bin/activate && python3 manage.py runserver"
      },
      "windows": {
        "command": "cmd.exe",
        "args": [
          "/c",
          "call ..\\env\\Scripts\\activate && py manage.py runserver"
        ],
        "options": {
          "cwd": "${workspaceFolder}/backend"
        }
      }
    },
    {
      "label": "sim",
      "type": "shell",
      "osx": {
        "command": "cd wifi2ble-box-simulator && source ../env/bin/activate && python3 simulator/main.py --port 8001 --no-user-simulation --desk-collision-chance 0 --desk-poweroff-chance 0"
      },
      "linux": {
        "command": "cd wifi2ble-box-simulator && source ../env/bin/activate && python3 simulator/main.py --port 8001 --no-user-simulation --desk-collision-chance 0 --desk-poweroff-chance 0"
      },
      "windows": {
        "command": "cmd.exe",
        "args": [
          "/c",
          "call ..\\env\\Scripts\\activate && py simulator/main.py --port 8001 --no-user-simulation --desk-collision-chance 0 --desk-poweroff-chance 0"
        ],
        "options": {
          "cwd": "${workspaceFolder}/wifi2ble-box-simulator"
        }
      }
    },
    {
      "label": "mqtt",
      "type": "shell",
      "osx": {
        "command": "cd backend && source ../env/bin/activate && python3 manage.py mqtt_listener"
      },
      "linux": {
        "command": "cd backend && source ../env/bin/activate && python3 manage.py mqtt_listener"
      },
      "windows": {
        "command": "cmd.exe",
        "args": [
          "/c",
          "call ..\\env\\Scripts\\activate && py manage.py mqtt_listener"
        ],
        "options": {
          "cwd": "${workspaceFolder}/backend"
        }
      }
    },
    {
      "label": "Run All",
      "dependsOn": ["frontend", "backend", "sim", "mqtt"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}